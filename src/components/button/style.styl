.d-btn
  display inline-block
  vertical-align middle
  padding-left 8px
  padding-right 8px
  border-radius 4px
  border-width 1px
  border-style solid
  font-size 0
  text-align center
  transition background-color .3s, border .3s
  + .d-btn
    margin-left 12px
  .d-btn-content
    width 100%
.d-btn-default
  background-color var(--theme)
  border-color var(--grey-400)
  color var(--grey-900)
  &:hover
    border-color var(--blue-500)
    .d-btn-text
      color var(--blue-500)
  &:active
    border-color var(--blue-600)
    .d-btn-text
      color var(--blue-600)
.d-btn-blue
  background-color var(--blue-500)
  border-color var(--blue-500)
  color var(--white)
  &:hover
    background-color var(--blue-400)
    border-color var(--blue-400)
  &:active
    background-color var(--blue-600)
    border-color var(--blue-600)
.d-btn-word
  background none
  border-color transparent
  color var(--grey-900)
  .d-btn-text
    font-weight 500
  &:hover
    .d-btn-text
      color var(--blue-500)
  &:active
    .d-btn-text
      color var(--blue-600)
.d-btn-text
  display inline-block
  vertical-align middle
  width 100%
  user-select none
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
.d-btn-large
  max-width 128px
  min-width 80px
  height 40px
  .d-btn-content
    height 38px
    line-height @height
.d-btn-medium
  max-width 116px
  min-width 80px
  height 32px
  .d-btn-content
    height 30px
    line-height @height
.d-btn-small
  max-width 108px
  min-width 60px
  height 28px
  .d-btn-content
    height 26px
    line-height @height

.d-btn-normal
  cursor pointer
.d-btn.d-btn-disabled
  cursor not-allowed
  .d-btn-text
    color var(--grey-400)
.d-btn-disabled:not([type='word'])
  background-color var(--grey-200)
  border-color var(--grey-200)

.d-btn-text
  font-size 14px
  transition color .3s
