.d-tree
  //display inline-block
  //vertical-align middle
  width 100%
  font-size 0
.d-tree-item
  display flex
  align-items center
  padding-left 12px
  width 100%
  height 38px
  line-height @height
  cursor pointer
  transition background-color .3s
  &:hover
    background-color  var(--hover-color-grey)
.d-tree-current
  background-color var(--blue-100)
  &:hover
    background-color  var(--hover-color-blue)
  .d-tree-text
    color var(--blue-500)
.d-tree-disabled
  cursor not-allowed
  .d-tree-content
    color var(--grey-400)
.d-tree-arrow
  padding-right 8px
  width 24px
  height 38px
  line-height @height
  cursor pointer
  .d-tree-arrow-svg
    display inline-flex
    vertical-align middle
    width 16px
    height 16px
    transform rotate(90deg)
  svg
    vertical-align middle
    width 16px
    height @width
  .d-tree-triangle
    transform rotate(180deg)
.d-tree-main
  display flex
  align-items center
  width calc(100% - 24px)
.d-tree-single
  .d-tree-content
    width 100%
.d-tree-multiple
  .d-tree-content
    width calc(100% - 20px)
.d-tree-checkbox
  padding-right 4px
  width 20px
  height 38px
.d-tree-content
  height 38px
  overflow hidden
  color var(--grey-900)
.d-tree-omit
  position relative
  padding-right 20px
.d-tree-text
  width 100%
  font-size 14px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
.d-tree-point-svg
  position absolute
  right 0
  top 9px
  width 20px
  height 20px
  line-height @height
  text-align center
  font-size 0
  cursor pointer
  &:hover
    path
      fill var(--blue-500)
  svg
    vertical-align middle
    width 16px
    height 16px
    path
      transition fill .3s
.d-tree-point-svg-active
  svg
    path
      fill var(--blue-500)
