@import "../../assets/animate/slideHorizontal.styl"

.d-cascade-container
  position absolute
  display inline-block
  background-color var(--theme)
  border 1px solid var(--grey-300)
  border-radius 4px
  font-size 0
  box-shadow var(--box-shadow-bottom)
  overflow hidden
  z-index 7000

.d-cascade-drop
  display flex
.d-cascade-drop-normal
  .d-cascade-list
    + .d-cascade-list
      border-left 1px solid var(--grey-300)
.d-cascade-drop-reverse
  flex-direction row-reverse
  .d-cascade-list
    + .d-cascade-list
      border-right 1px solid var(--grey-300)

.d-cascade-list
  position relative
  padding-top 8px
  padding-bottom 8px
  //background-color var(--theme)
  min-width 120px
  max-width 240px
  max-height 206px
  overflow-y auto
.d-cascade-list-1
  z-index 3
.d-cascade-list-2
  z-index 2
.d-cascade-list-3
  z-index 1

.d-cascade-item
  padding-left 8px
  padding-right 8px
  width 100%
  height 38px
  display flex
  flex-direction column
  justify-content center
  text-align left
  cursor pointer
  transition background-color .12s
  &:hover
    background-color var(--grey-100)
.d-cascade-item-active
  background-color var(--blue-100)
.d-cascade-name
  line-height 20px
  font-size 14px
  color var(--grey-900)
.d-cascade-subhead
  line-height 18px
  font-size 12px
  color var(--grey-500)
