.d-input
  position relative
  display inline-block
  vertical-align middle
  width 100%
  font-size 0
.d-input-el
  outline none
  background-color transparent
  padding-left 8px
  border 1px solid var(--grey-400)
  border-radius 4px
  width 100%
  height 32px
  font-size 14px
  &::-webkit-input-placeholder
    color var(--grey-400)
.d-input-normal
  cursor pointer
  .d-input-el
    color var(--grey-900)
    transition color .12s
    &:active,
    &:focus,
    &:hover
      border-color var(--blue-500)
.d-input-disabled
  background-color var(--grey-200)
  .d-input-el
    cursor not-allowed
    color var(--grey-400)
.d-input-err
  position absolute
  left 0
  bottom -20px
  line-height 18px
  color var(--red-500)
  font-size 12px
